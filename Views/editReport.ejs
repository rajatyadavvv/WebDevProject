<%- include("partials/header") %>
<link rel="stylesheet" href="/css/reports.css">

<div class="container" style="padding: 40px 0;">
  <h2>Edit Report</h2>

  <form action="/reports/edit/<%= report._id %>" method="POST" class="form">
    <label>Report ID</label>
    <input type="text" name="reportId" value="<%= report.reportId %>" class="input" required>

    <label>Date</label>
    <input type="text" name="date" value="<%= report.date %>" class="input" required>

    <label>Location</label>
    <input type="text" name="location" value="<%= report.location %>" class="input" required>

    <label>Status</label>
    <select name="status" class="input">
      <option <%= report.status === "Completed" ? "selected" : "" %>>Completed</option>
      <option <%= report.status === "Pending" ? "selected" : "" %>>Pending</option>
    </select>

    <button class="btn btn-primary" type="submit">Save Changes</button>
  </form>
</div>

<%- include("partials/footer") %>
